<h1>Nova conta/divida</h1>

<% if @divida.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@divida.errors.count, "erro") %> impedem que a conta/divida seja gravada no banco de dados:</h2>
 
    <ul>
    <% @divida.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with scope: :divida, url: dividas_path, local: true do |form| %>
  <p>
    <%= form.label :nome, 'Nome:' %><br>
    <%= form.text_field :nome %>
  </p>
 
  <p>
    <%= form.label :descricao, 'Descrição:' %><br>
    <%= form.text_field :descricao %>
  </p>
 
  <p>
    <%= form.label :periodo, 'Periodo de cobrança:' %><br>
    <%= form.select :periodo, [['Diário','diario'],['Semanal','semanal'],['Mensal','mensal'],['Anual','anual']] %>
  </p>
 
  <p>
    <%= form.label :valor, 'Valor:' %><br>
    <%= form.text_field :valor %>
  </p>

  <p>
    <%= form.submit 'Adicionar Conta/Divida' %>
  </p>
<% end %>