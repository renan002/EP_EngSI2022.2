<section class='main-content'>

  <div class='form-titulo'>Acesse sua conta</div>

  <div class='white-box'>
    <%= form_for :session, url: sign_in_path do |f| %>
      <p class='form-label'><%= f.label :email %></p>
      <p class='form-input'><%= f.email_field :email, autofocus: true %></p>

      <p class='form-label'><%= f.label :password %><br /></p>
      <p class='form-input'><%= f.password_field :password, autocomplete: "off" %></p>

      <p class='form-btn'><%= f.submit "Entrar" %></p>

      <div class='form-linked-text'>Primeira vez? <%= link_to "Cadastre-se agora!", new_usuario_path %></div>
    <% end %>
  </div>

</section>