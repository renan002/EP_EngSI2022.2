<h1>Cadastre Objetivo</h1>

<% if @objetivo.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@objetivo.errors.count, "erro") %> impedem que o objetivo seja gravado no banco de dados:</h2>
 
    <ul>
    <% @objetivo.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with scope: :objetivo, url: objetivo_url, local: true do |form| %>
  <p>
    <%= form.label :titulo %><br>
    <%= form.text_field :titulo %>
  </p>
 
  <p>
    <%= form.label :descricao %><br>
    <%= form.text_field :descricao %>
  </p>

  <p>
    <%= form.submit 'Adicionar Objetivo' %>
  </p>
<% end %>